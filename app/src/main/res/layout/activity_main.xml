<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        tools:context=".MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/title"
            android:layout_weight=".2"
            android:gravity="fill"
            android:ellipsize="marquee"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:enabled="true"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/thumb"
            android:contentDescription="@string/thumb" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >

            <SeekBar
                android:id="@+id/seek"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/seek"
                android:layout_marginStart="5dp"
                android:layout_marginTop="25dp"
                android:text="@string/_0_0"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_0"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:layout_alignEnd="@+id/seek"
                android:layout_marginTop="25dp"
                android:textSize="15sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/backward"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/backward"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/none" />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/play"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/play"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/none"
                />

            <ImageButton
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/forward"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:src="@drawable/forward"
                android:scaleType="centerCrop"
                android:backgroundTint="@color/white"
                android:contentDescription="@string/none"
                />

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/player_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/player_navig"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/player"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_playlist"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:clickable="true"
                android:focusable="true"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/player_playlists"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/playlists"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/songs_list_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search_nav"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/songs_list"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/downloads_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/download"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/downloads"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/settings_ico"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/action_settings"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/about_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/update"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/developer_contact_nav"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                tools:ignore="UseCompoundDrawables">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/contact"
                    android:contentDescription="@string/none" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="@string/developer_contact"
                    android:gravity="fill"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>

